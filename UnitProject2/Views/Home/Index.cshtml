@model Birthdate
// Author: Firaol and Xavier
//For this Project We are doing  Age Calculator.  We enter the day, month, and years, the it display  how old you are
@{
    ViewData["Title"] = "Age Calculator";
}
<style>
    /* Center the content */
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 99vh;
        margin: 0;
        background-color: #f0f0f0; /* Set background color */
    }

    /* Style the border rectangle */
    .container {
        border: 2px solid #000;
        padding: 20px;
        background-color: darkgray; /* Set background color inside the rectangle */
        border-radius: 11px; /* Rounded corners */
    }

    h1 {
        color: black;
    }

    /* Style the header */
    h1 {
        text-align: center;
    }
</style>

<h1>Age Calculator Page</h1>

<form asp-controller="Home" asp-action="CalculateAge" method="post">

    <div class="form-group">
        <label for="BirthDate">Enter your birthdate:</label>
        <input type="date" class="form-control" id="BirthDate" name="BirthDate" asp-for="BirthDate" required>
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button> <a asp-action="Index">Clear</a>

</form>
